<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WisdomPetMedicine.Views.VisitsPage"
             xmlns:views="clr-namespace:WisdomPetMedicine.Views"
             Title="VisitsPage">

    <ContentPage.Resources>
        <views:VisitsData x:Key="data" RemainingVisits="2" />
    </ContentPage.Resources>
    
    <VerticalStackLayout>
        <Label Text="{Binding Source={StaticResource data}, 
            Path=RemainingVisits, Mode=OneWay}" />
        <Button Text="Actualizar"
                Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>