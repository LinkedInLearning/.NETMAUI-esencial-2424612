<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WisdomPetMedicine.Views.VisitsPage"
             xmlns:views="clr-namespace:WisdomPetMedicine.Views"
             Title="VisitsPage">

    <ContentPage.BindingContext>
        <views:VisitsData RemainingVisits="2" />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">

        <Label Text="{Binding Clients.Count, Mode=OneWay}"
               FontSize="30" />

        <CollectionView 
            Grid.Row="1"
            SelectionMode="Single"
            SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
            ItemsSource="{Binding Clients, Mode=OneWay}" />
    </Grid>
</ContentPage>